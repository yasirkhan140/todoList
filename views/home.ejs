<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<div id = "todo-list-body" class ="mx-5 "> 
    <div>        
        <h1 id = "main-heading">Todo App</h1>
    </div>
    <div id ="form-full">
        <form action = "add-tasks" method="POST" id = "form">
            <label class ="form-label d-block"> Description</label>
            <input class = "d-block input-group border-warning mx-2"type="text" name = "description" placeholder="What do you need to do?">
            <label class ="form-label d-inline-block w-50 border-0 mt-4" >CATEGORY</label>
            <label class = "form-label d-inline-block w-25 border-0 mt-2">Due date</label>
            <select class = "input-group d-inline-block w-50 mx-2 mt-3" name ="category"> 
                <option value = "">Choose an option</option>
                <option value="Personal">Personal</option>
                <option value="Work">Work</option>
                <option value="School">School</option>
                <option value ="Cleaning">Cleaning</option>
                <option value="Other">Other</option>
            </select>       
            <input class ="input-group d-inline-block w-25 mx-2" type = "date" name = "date">
            <button class ="btn add-task-btn mt-2 mx-3" type="submit">
                <img src = "images/plus.png">
                Add Task
            </button>
        </form>
        <form action = "delete-tasks" method="POST" class = "mt-5 pt-2">
            <ul>
                
                <button class="btn mt-1" type = "sumbit" id = "delete-btn">
                    <i class="fa-solid fa-trash"></i>Delete Tasks
                </button>
                <% for(let i of todo){%>
                <input id = "input"type="checkbox" name ="name" value = "<%=i.description%>">
                    <label id ="description" class = "d-inline-block" for = "input"><%=i.description%></label>
                    <p id  ="category" class = "m-t-2 d-inline-block"><%=i.category%></p>
                    <p id  ="date" class = "d-block">
                        <i class="fa-sharp fa-solid fa-calendar-days"></i>
                        <span id = "date-view"><%=i.date%></span>
                    </p>
                <%}%>
            </ul>
        </form>
    </div>
</div>
<script type= "text/javascript" src = "/java/home.js"></script>
